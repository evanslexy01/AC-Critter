{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "label": "start:dev",
      "script": "start",
      "promptOnClose": true,
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "severity": "error",
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "ERROR in (.*)",
            "file": 1
          },
          {
            "regexp": "\\((\\d+),(\\d+)\\):(.*)",
            "line": 1,
            "column": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Unsafe minification",
          "endsPattern": "Project is running at:"
        }
      }
    }
  ]
}
